{
  "manifest_version": 2,
  "name": "Claude Fast Facts extension",
  "version": "1.0",
  "description": "Provides confidence and risk analysis for Claude AI responses with visual indicators.",

  "permissions": [
    "activeTab",
    "*://claude.ai/*"
  ],

  "content_scripts": [
    {
      "matches": ["*://claude.ai/*"],
      "js": ["fastfacts.js"],
      "run_at": "document_end"
    }
  ],

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}