{
  "manifest_version": 2,
  "name": "Claude Fast Facts extension",
  "version": "1.0",
  "description": "Provides confidence and risk analysis for Claude AI responses with visual indicators.",

  "permissions": [
    "activeTab",
    "*://claude.ai/*"
  ],

  "content_scripts": [
    {
      "matches": ["*://claude.ai/*"],
      "js": ["fastfacts.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["fastfacts.js"],
      "css": ["fastfacts.css"],
      "run_at": "document_idle"
    }
  ]
}